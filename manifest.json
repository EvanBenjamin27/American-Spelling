{
  "manifest_version": 3,
  "name": "English Spelling Corrector",
  "version": "1.0",
  "description": "Corrects common British to American English spellings.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["dictionary.json"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
